//媒体查询 判断2像素比 3像素比设备
@media only screen and (-webkit-device-pixel-ratio: 2)
  .border-1px
    &::before
      transform scaleY(.5)
@media only screen and (-webkit-device-pixel-ratio: 3)
  .border-1px
    &::before
      transform scaleY(.333333333)

top-border-1px($color)
  position relative
  &::before
    content ''
    width 100%
    height 1px
    display block
    background $color
    position absolute
    top 0
    left 0

//个人中心重复样式
four-page($color)
  &
    width 100%
    height 60px
    background #ffffff
    margin-top 1px
    line-height 60px
    >p:nth-child(1)
      float left
      color #777
      font-size 18px
      margin-left 10px
      i
        color $color
        font-size 30px
        vertical-align middle
    >p:nth-child(2)
      float right
      color #777
      margin-right 10px

input-style()
  &
    width 100%
    height 50px
    border 1px solid #e0e0e0
    border-radius 8px
    display block
    transform translateY(10px)
    outline none
    padding-left 10px
  &:focus
    border 1px solid #0dbc1b